<UserControl x:Class="ImageProcessing.Views.Controls.PreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="200">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6"
                Background="White" Padding="4" Opacity="0.9">
            <Grid>
                <!-- 프리뷰 이미지 -->
                <Image x:Name="PreviewImageControl"
                       Source="{Binding PreviewImage}"
                       Visibility="{Binding PreviewVisibility}"
                       Stretch="Uniform" />

                <!-- Viewport 표시 -->
                <Canvas x:Name="PreviewCanvas"
                         Background="Transparent"
                        MouseDown="PreviewCanvas_MouseDown"
                        MouseMove="PreviewCanvas_MouseMove"
                        MouseUp="PreviewCanvas_MouseUp">
                    <Rectangle x:Name="ViewportRect"
                               Stroke="Yellow"
                               StrokeThickness="2"
                               Fill="#40FFFF00"
                               Visibility="Visible"/>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</UserControl>
