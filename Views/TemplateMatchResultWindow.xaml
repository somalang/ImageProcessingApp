<?xml version="1.0" encoding="iso-2022-kr"?>
<Window x:Class="ImageProcessing.Views.TemplateMatchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Template Match Result" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <!-- 상단 정보 -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10,5" Background="#F0F0F0">
            <TextBlock Text="매칭 결과: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="MatchResultText" Text="{Binding MatchResultText}" VerticalAlignment="Center" Margin="5,0"/>
            <TextBlock Text="| 처리 시간: " FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Text="{Binding ProcessingTime}" VerticalAlignment="Center" Margin="5,0"/>
        </StackPanel>

        <!-- 버튼 영역 -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="결과 적용" Command="{Binding ApplyResultCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="닫기" Click="CloseButton_Click" Width="60" Height="30" Margin="5"/>
        </StackPanel>

        <!-- 이미지 표시 영역 -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="ResultImage" 
                           Source="{Binding ResultImage}" 
                           Stretch="Uniform"
                           MaxWidth="1200"
                           MaxHeight="800"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>